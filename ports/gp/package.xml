<port>
    <depends>readline</depends>
    <download>
        <command>wget http://pari.math.u-bordeaux.fr/pub/pari/unix/pari-2.5.0.tar.gz</command>
        <command>tar xf pari-2.5.0.tar.gz</command>
        <command>patch -p0 &lt; ../gp1.diff</command>
        <result>pari-2.5.0</result>
    </download>
    <build>
        <command>
            cd pari-2.5.0
            #doubleformat=1 ./Configure --host=arm-unknown-nto-qnx6.5.0eabi --without-readline --prefix=`pwd`/../../obj
            doubleformat=1 ./Configure --host=arm-unknown-nto-qnx6.5.0eabi --with-readline=`pwd`/../../obj --prefix=`pwd`/../../obj
            cd Oqnx6.5.0eabi-arm-unknown-nto
            make install
        </command>
    </build>
    <package>
        <argument>-platform</argument>
        <argument>blackberry</argument>
        <file>bin/gp</file>
        <file remote="res/icon.png">../icon.png</file>
        <file>../splashscreen.png</file>
        <file remote="res/splashscreen.png">../splashscreen.png</file>
        <file remote="lib/libqtermlib.so">libqtermlib.so</file>
        <file remote="lib/libQtCore.so.4">libQtCore.so</file>
        <file remote="lib/libQtGui.so.4">libQtGui.so</file>
        <file remote="lib/libQtOpenGL.so.4">libQtOpenGL.so</file>
        <file remote="lib/libterm.so">libterm.so</file>
        <file remote="lib/platforms/libblackberry.so">libblackberry.so</file>
    </package>
</port>
