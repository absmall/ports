<port>
  <depends>libwpd</depends>
  <depends>libwpg</depends>
  <depends>lcms</depends>
  <download>
    <command>wget http://cgit.freedesktop.org/libreoffice/libcdr/snapshot/libcdr-0.0.9.tar.gz</command>
    <command>tar -zxf libcdr-0.0.9.tar.gz</command>
    <result>libcdr-0.0.9</result>
  </download>
  <build>
    <command>
        cd libcdr-0.0.9
        ./autogen.sh
        CFLAGS=-std=c++11 ./configure --host ${QNX_VERSION} --prefix=${QNX_INSTALL}
        make
        make install
        </command>
  </build>
  <package>
    <file>build/armv7/bin/cmx2xhtml</file>
    <file>build/armv7/bin/cdr2raw</file>
    <file>build/armv7/bin/cmx2raw</file>
    <file>build/armv7/bin/cdr2xhtml</file>
  </package>
  <export>
    <file>build/armv7/include/libcdr-0.0/libcdr/CDRStringVector.h</file>
    <file>build/armv7/include/libcdr-0.0/libcdr/CMXDocument.h</file>
    <file>build/armv7/include/libcdr-0.0/libcdr/CDRDocument.h</file>
    <file>build/armv7/include/libcdr-0.0/libcdr/libcdr.h</file>
    <file>build/armv7/lib/libcdr-0.0.la</file>
    <file>build/armv7/lib/libcdr-0.0.a</file>
    <file>build/armv7/lib/libcdr-0.0.so</file>
    <file>build/armv7/lib/libcdr-0.0.so.0</file>
    <file>build/armv7/lib/pkgconfig/libcdr-0.0.pc</file>
  </export>
</port>
