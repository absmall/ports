<port>
    <download>
        <command>wget http://dev.mysql.com/get/Downloads/Connector-C/mysql-connector-c-6.0.2.tar.gz/from/http://mirror.csclub.uwaterloo.ca/mysql/ --output-document=mysql-connector-c-6.0.2.tar.gz</command>
        <command>tar -zxvf mysql-connector-c-6.0.2.tar.gz</command>
        <result>mysql-connector-c-6.0.2</result>
        <patch>0001-Force-fPIC.patch</patch>
