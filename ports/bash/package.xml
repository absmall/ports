<port>
	<download>
		<command>wget http://ftp.gnu.org/gnu/bash/bash-4.2.tar.gz</command>
		<command>tar -zxvf bash-4.2.tar.gz</command>
        <command>patch -p0 &lt; ../bash1.diff</command>
        <result>bash-4.2</result>
	</download>
    <build>
        <command>
		cd bash-4.2
        ./configure --cache-file cross-build/arm-qnx.cache --host arm-unknown-nto-qnx6.5.0eabi --prefix=`pwd`/../../obj
		make install
        </command>
    </build>
    <package>
        <file>bin/bash</file>
    </package>
</port>
