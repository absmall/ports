<port>
    <download>
        <command>git clone  git@git.rim.net:users/asmall/libterm</command>
        <result>libterm</result>
    </download>
    <build>
        <command>
            cd libterm
            cmake -DCMAKE_TOOLCHAIN_FILE=ntoarm.cmake -DCMAKE_INSTALL_PREFIX=`pwd`/../../obj .
            make install
        </command>
    </build>
    <package>
        <file remote="qterm">bin/qterm</file>
        <file>lib/libterm.so</file>
        <file>lib/libqtermlib.so</file>
        <file remote="res/icon.png">../src/libterm/qterm/icon.png</file>
        <file remote="res/splashscreen.png">../src/libterm/qterm/splashscreen.png</file>
    </package>
</port>
