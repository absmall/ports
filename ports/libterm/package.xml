<port>
    <download>
        <command>git clone  ~/work/libterm</command>
        <!--<command>git clone  git@git.rim.net:users/asmall/libterm</command>-->
        <result>libterm</result>
    </download>
    <build>
        <command>
            cd libterm
            mkdir obj.playbook
            cd obj.playbook
            cmake -DCMAKE_TOOLCHAIN_FILE=../ntoarm.cmake -DCMAKE_INSTALL_PREFIX=${QNX_INSTALL} ..
            make install
        </command>
    </build>
    <package>
        <file remote="qterm">bin/qterm</file>
        <file>lib/libterm.so</file>
        <file>lib/libqtermlib.so</file>
        <file remote="res/icon.png">../libterm/qterm/icon.png</file>
        <file remote="res/splashscreen.png">../libterm/qterm/splashscreen.png</file>
    </package>
    <export>
        <file>lib/libterm.so</file>
        <file>lib/libqtermlib.so</file>
    </export>
</port>
